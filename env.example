# API Keys (add your keys here, copy to .env)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=DataEngineeringBot/1.0

GITHUB_TOKEN=  # Optional, for higher rate limits

# Data Paths
DATA_ROOT=~/data
RAW_DATA_PATH=${DATA_ROOT}/raw
ICEBERG_DATA_PATH=${DATA_ROOT}/iceberg
DBT_ARTIFACTS_PATH=${DATA_ROOT}/dbt

# ClickHouse Connection
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# DuckDB Settings
DUCKDB_PATH=${DATA_ROOT}/duckdb/main.duckdb

# NAS Configuration (for future use)
NAS_MOUNT_PATH=/mnt/nas
NAS_ARCHIVE_PATH=${NAS_MOUNT_PATH}/archive

# Logging
LOG_LEVEL=INFO
LOG_PATH=./logs
